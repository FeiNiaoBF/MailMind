SECRET_KEY=dev

# 数据库配置
DATABASE_URL=sqlite:///instance/mailmind.db
DEV_DATABASE_URL=sqlite:///dev/mailmind.db
TEST_DATABASE_URL=sqlite:///:memory:

# 邮件配置
EMAIL_PROVIDER=mailtrap
MAIL_SERVER=sandbox.smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_DEFAULT_SENDER=test@mailtrap.io

# Gmail API 配置
GMAIL_CLIENT_ID=your-client-id
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token
GMAIL_ACCESS_TOKEN=your-gmail-access-token

# IMAP 配置（用于读取邮件）
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# AI 模型配置
AI_MODEL_TYPE=openai
AI_MODEL_KEY=your-openai-api-key

# 日志配置
LOG_LEVEL=INFO          # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DIR=logs
LOG_FILE=app.log        # 日志文件名
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=5
LOG_OUTPUT_MODE=both    # console | file | both

# Gmail OAuth2 配置
GMAIL_PROJECT_ID=your-project-id
GMAIL_REDIRECT_URI=http://localhost:5000/auth/callback

# JWT配置
JWT_SECRET_KEY=your-secret-key

# 邮件配置
DEFAULT_FROM_EMAIL=noreply@mailmind.com
