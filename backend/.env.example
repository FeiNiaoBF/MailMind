SECRET_KEY=dev

# 数据库配置
DATABASE_URL=sqlite:///instance/mailmind.db
DEV_DATABASE_URL=sqlite:///dev/mailmind.db
TEST_DATABASE_URL=sqlite:///:memory:

# 邮件服务器配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# IMAP 配置（用于读取邮件）
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# AI 模型配置
AI_MODEL_TYPE=openai
AI_MODEL_KEY=your-openai-api-key

# 日志配置
LOG_LEVEL=INFO          # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=json         # json | text | colored
LOG_DIR=logs
LOG_FILE=app.log        # 日志文件名
LOG_MAX_BYTES=5242880
LOG_BACKUP_COUNT=5
LOG_OUTPUT_MODE=both    # console | file | both
